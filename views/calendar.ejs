<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= header %> - Peach Payments</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- STYLESHEET -->
    <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/templates/template.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/calendar/calendar.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/alert.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/assets/Calendar/fullcalendar.min.css" />
    <link rel="stylesheet" type="text/css" href="/assets/Calendar/fullcalendar.print.min.css" media='print'/>
    <!-- FAVICON -->
    <link rel="icon" type="favicon" href="https://support.peachpayments.com/hc/en-us/article_attachments/200826988/Peach_Icon.png">
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
</head>
<body>

    <!-- CONTAINER -->
    <div class="container">

        <!-- GRID CONTAINER -->
        <div class="grid_container">

            <div class="loading_wrapper">
                <div class="loading_main"></div>
            </div>

            <!-- This is the Message -->
            <%- messages('message', locals) %>
            <!-- This is the Message -->
            <% if (errors) { %>
                <% console.log(errors) %>
                <% errors.forEach(function (error){ %>
                    <div class="alert alert-login alert-danger">
                        <%= error.msg %>
                    </div>
                <% }) %>
            <% } %>

            <%- include('./modals/calendar_date', locals) %>
            <%- include('./modals/calendar_option', locals) %>
            <%- include('./modals/calendar_edit', locals) %>

            <!-- TOP NAVBAR -->
            <%- include('./templates/top_nav', locals) %>

            <!-- ADMIN MAIN -->
            <div class="admin_panel">

                <% if (user.admin != "false" && user.admin == "true") { %>
                    <button data-modal="modal_2" class="add_new_date modal_btn">Add New Calendar Date</button>
                <% } %>
                

                <!-- LEFT NAVBAR -->
                <%- include('./templates/left_nav', locals) %>

                <!-- MAIN SECTION -->
                <div class="main_section">

                    <!-- *************** MAIN CALENDER *************** -->
                    <div id="calendar"></div>
                    <!-- *************** TODAY CALENDER *************** -->
                    <!-- <div class="calendar_form">
                    </div> -->
                    <button data-modal="modal_3" class="modal_btn hidden modal_3_btn"></button>
                    <button data-modal="modal_4" class="modal_btn hidden modal_4_btn"></button>

                </div>

                <!-- RIGHT NAVBAR -->
                <%- include('./templates/right_nav', locals) %>

            </div>

        </div>

    </div>

    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/script.js"></script>
    <script src="/javascripts/calendar.js"></script>
    <script src="/javascripts/modals.js"></script>
    
    <script src="/assets/Calendar/moment.min.js"></script>
    <script src="/assets/Calendar/fullcalendar.min.js"></script>
    
    <script>

        $(".calendar_link").css('background','#d15107');
        $(".calendar_link").css('color','#fff');

    </script>
    
</body>
</html>