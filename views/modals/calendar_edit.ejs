<!-- MODAL -->

<div class="modal_wrapper modal_4" data-modal="modal_4">
    <div class="modal_main">
        <div class="modal_header">
            <h3>New Leave Date <i class="fab fa-pagelines"></i></h3>
            <i class="far fa-times-circle close_modal"></i>
        </div>
        <div class="modal_form">
            <form method="POST" action="/calendar-edit">
                <input type="hidden" id="edit_id" name="edit_id">
                <div class="input_box">
                    <label>Full Name: <span class="required_input"> *</span></label>
                    <br>
                    <input type="text" id="edit_fullname" name="edit_fullname" placeholder="Loading..." autofocus autocomplete="off" spellcheck="false" required>
                </div>
                <div class="input_box">
                    <label for="title">Reason for leave <span class="required_input"> *</span></label>
                    <br>
                    <input type="text" id="edit_leave" name="edit_leave" placeholder="Loading..." autocomplete="off" required>
                </div>
                <div class="input_box">
                    <label for="startDate">Start Date <span class="required_input"> *</span></label>
                    <br>
                    <input class="calendar_date" id="edit_startdate" type="date" name="edit_startdate" autocomplete="off" required>
                </div>
                <div class="input_box">
                    <label for="endDate">End Date <span class="required_input"> *</span></label>
                    <br>
                    <input class="calendar_date" id="edit_enddate" type="date" name="edit_enddate" autocomplete="off" required>
                </div>
                <div class="input_box">
                    <label for="color">Color <span class="required_input"> *</span></label>
                    <br>
                    <input id="edit_color" type="color" name="edit_color" autocomplete="off" required>
                </div>
                <button class="button_calendar disabled" type="submit">Submit <i class="fas fa-arrow-right submit_arrow"></i></button>
            </form>
        </div>
    </div>
</div>