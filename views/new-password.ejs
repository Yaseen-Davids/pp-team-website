<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= header %> - Peach Payments</title>
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <!-- STYLESHEET -->
    <link rel="stylesheet" href="/stylesheets/login.css">
    <link rel="stylesheet" href="/stylesheets/alert.css">
    <!-- FAVICON -->
    <link rel="icon" type="favicon" href="https://support.peachpayments.com/hc/en-us/article_attachments/200826988/Peach_Icon.png">
</head>
<body>

    <!-- This is the Message -->
    <%- messages('message', locals) %>
    <!-- This is the Message -->
    <% if (errors) { %>
        <% console.log(errors) %>
        <% errors.forEach(function (error){ %>
            <div class="alert alert-login alert-danger">
                <%= error.msg %>
            </div>
        <% }) %>
    <% } %>

    <!-- CONTAINER -->
    <div class="container">

        <!-- WRAPPER -->
        <div class="wrapper login_wrapper">

            <!-- PEACH LOGO -->
            <div class="logo" id="element">
                <img src="/images/Peach Icon.png" alt="">
            </div>

            <!-- LOGIN FORM -->
            <form class="form_main" method="POST" action="/update-password">

                <h3> <%= header %> </h3>

                <input type="hidden" name="username" value="<%= user.username %>">
                <input type="hidden" name="id" placeholder="id" value="<%= user.id %>">
                <input type="hidden" name="email" value="<%= user.email %>">
                <input type="hidden" name="token" value="<%= user.token %>">
                <input type="hidden" name="admin" value="<%= user.admin %>">
                <i class="fas fa-lock login_icon"></i>
                <input type="password" name="password" placeholder="Password" autofocus>
                <br><br>
                <i class="fas fa-lock login_icon"></i>
                <input type="password" name="password2" placeholder="Confirm Password">
                <br><br>

                <button class="login-btn"><%= header %></button>

            </form>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/script.js"></script>
    <script src="/assets/Hover-Plate-Effect/jquery.plate.js"></script>
    
    <script>
    $('#element').plate({
          // inverse animation
        inverse: false,
        // transformation perspective in pixels
        perspective: 500,
        // maximum rotation in degrees
        maxRotation: 10,
        // duration in milliseconds
        animationDuration: 200
    });

    </script>

</body>
</html>